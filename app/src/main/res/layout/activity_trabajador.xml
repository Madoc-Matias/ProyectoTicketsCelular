<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo de texto para el título del ticket -->
        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título del ticket" />

        <!-- Campo de texto para la descripción del ticket -->
        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del ticket"
            android:inputType="textMultiLine"
            android:minHeight="100dp" />

        <!-- Botón para crear un nuevo ticket -->
        <Button
            android:id="@+id/buttonCrearTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Ticket" />

        <!-- ListView para mostrar la lista de tickets del trabajador -->

        <!-- Botón para confirmar que el ticket fue resuelto -->
        <ListView
            android:id="@+id/listViewTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonConfirmarResuelto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Resuelto" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>